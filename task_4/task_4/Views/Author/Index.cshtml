@model IEnumerable<task_4.Models.Entities.Author>
@{
    ViewData["Title"] = "Authors";
}

    <body>
        <h3>Authors</h3>

        @using (Html.BeginForm())
        {
            <p>
                Find by name: @Html.TextBox("SearchString")
                <input type="submit" value="Search" />
            </p>
        }

        <table>
            <tr>
                <th>
                    @Html.ActionLink("First Name", "Index", new { sortOrder = ViewBag.NameSortParm })
                </th>
                <th>
                    @Html.ActionLink("Second name", "Index", new { sortOrder = ViewBag.SecondNameSortParm })
                </th>
                <th></th>
            </tr>
            @foreach (var author in Model)
            {
                <tr>
                    <td>@author.FirstName</td>
                    <td>@author.SecondName</td>
                    <td><button type="button" class="btn btn-secondary btn-sm"><a class="nav-link text-light" href="~/Author/Details/@author.Id">Детали</a></button></td>
                    <td><button type="button" class="btn btn-secondary btn-sm"><a class="nav-link text-light" href="~/Author/Edit/@author.Id">Редактировать</a></button></td>
                    <td><button type="button" class="btn btn-secondary btn-sm"><a class="nav-link text-light" href="~/Author/Delete/@author.Id">Удалить</a></button></td>
                </tr>
            }
        </table>
        <button type="button" class="btn btn-secondary btn-sm">
            <a class="nav-link text-light" asp-area="" asp-controller="Author" asp-action="Create">Добавить</a>
        </button>
    </body>