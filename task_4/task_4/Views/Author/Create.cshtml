@model task_4.Models.Entities.Author
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<form asp-controller="Author" asp-action="Create">
    <div class="form-group">
        <label asp-for="FirstName" class="custom-control-label">Имя</label>
        <input type="text" asp-for="FirstName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="SecondName" class="custom-control-label">Фамилия</label>
        <input type="text" asp-for="SecondName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DateOfBirthday" class="custom-control-label">Дата рождения</label>
        <input type="date" asp-for="DateOfBirthday" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Send" class="btn" />
    </div>
</form>

