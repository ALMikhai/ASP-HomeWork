@model task_4.Models.Entities.Book
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<form asp-controller="Book" asp-action="Edit" asp-route-id="@Model.Id">
    <div class="form-group">
        <label asp-for="Name" class="custom-control-label">Название</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="AuthorId" class="custom-control-label">Автор (id)</label>
        <input type="number" asp-for="AuthorId" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DateOfRelease" class="custom-control-label">Дата создания</label>
        <input type="date" asp-for="DateOfRelease" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="NumberOfCopies" class="custom-control-label">Количество копий</label>
        <input type="number" asp-for="NumberOfCopies" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Send" class="btn" />
    </div>
</form>